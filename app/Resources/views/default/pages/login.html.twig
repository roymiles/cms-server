{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2"
        id="loginbox" style="margin-top:50px;">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        Sign In
                    </div>
                    <div style=
                    "float:right; font-size: 80%; position: relative; top:-10px">
                    <a href="{{ path('ForgotPasswordForm') }}">Forgot password?</a>
                    </div>
                </div>
                <div class="panel-body" style="padding-top:30px">
                    {% if app.session.flashbag.has('login-error') %}
                        <div class="alert alert-danger" id="loginalert">
                            {% for errorMessage in app.session.flashBag.get('login-error') %}
                                <p>{{ errorMessage }}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <form action="{{ path('ProcessLoginRequest') }}" method="POST" class="form-horizontal" name="loginform" role="form">
                        {{ dump(session_data) }}
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <input type="hidden" name="site_token" value="{{ local_site_token  }}">

                        <div class="input-group" style="margin-bottom: 25px">
                            <span class="input-group-addon"><i class=
                            "glyphicon glyphicon-user"></i></span>
                            <input class="form-control" id="login-username"
                            name="UsernameOrEmail" placeholder="username or email"
                            type="text" value="">
                        </div>
                        <div class="input-group" style="margin-bottom: 25px">
                            <span class="input-group-addon"><i class=
                            "glyphicon glyphicon-lock"></i></span>
                            <input class="form-control" id="login-password"
                            name="Password" placeholder="password" type=
                            "password">
                        </div>
                        <div class="input-group">
                            <div class="checkbox">
                                <label><input id="login-remember" name=
                                "remember" type="checkbox" value="1"> Remember me</label>
                            </div>
                        </div>

                        <div class="form-group" style="margin-top:10px">
                            <!-- Button -->
                            <div class="col-sm-12 controls">
                                <input type="submit" value="Login" class="btn btn-success">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12 control">
                                <div style=
                                "border-top: 1px solid #888; padding-top:15px; font-size:85%">
                                Don't have an account! 
                                <a href="{{ path('RegisterForm') }}">
                                    Sign Up Here</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
